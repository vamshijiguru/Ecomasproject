DROP SCHEMA IF EXISTS "full-stack-ecommerce";
CREATE SCHEMA IF NOT EXISTS "full_stack_ecommerce";
CREATE TABLE IF NOT EXISTS full_stack_ecommerce.product_category(
id bigserial primary key,
category_name varchar(255)
);
CREATE TABLE IF NOT EXISTS full_stack_ecommerce.product(
	id bigserial primary key,
 	sku VARCHAR(255) ,
 	name VARCHAR(255) ,
 	description VARCHAR(255) ,
	unit_price DECIMAL(13,2) ,
	image_url VARCHAR(255) ,
	active boolean default true,
	units_in_stock INT ,
	date_created timestamp(6) with time zone not null default now() ,
	last_updated timestamp(6) with time zone not null default now() ,
	category_id BIGINT not NULL,
	CONSTRAINT fk_category FOREIGN KEY (category_id) REFERENCES full_stack_ecommerce.product_category (id)
);
